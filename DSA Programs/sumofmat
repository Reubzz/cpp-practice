#include <iostream>


using namespace std;

int main()
{
    //   clrscr (); // use only in turbo C.
    int i, j, n, x, m;
    int name;
    int mat[10][10];
    int A[10][10];
    int B[10][10];
    cout << "Enter the Number of rows" << endl;
    cin >> n;
    cout << "Enter the Number Of coloumns" << endl;
    cin >> m;

    cout << "Enter the matrix value" << endl;

    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            cout << "Enter element for a" << i + 1 << j + 1 << ":" << endl;
            cin >> A[i][j];
        }
    }
    cout << "Entered matrix" << endl;
    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            cout << A[i][j] << "  ";
        }
        cout << endl;
    }
    
    cout << "Enter the second matrix" << endl;
    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            cout << "Enter element for a" << i + 1 << j + 1 << ":" << endl;
            cin >> B[i][j];
        }
    }
    cout << "Entered matrix" << endl;
    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            cout << B[i][j] << "  ";
        }
        cout << endl;
    }
    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            mat[i][j] = A[i][j] + B[i][j];
        }
    }

    cout << "sum of the given  two matrix" << endl;
    for (i = 0; i < n; i++){
        for (j = 0; j < m; j++){
            cout << mat[i][j];
            cout << "  ";
        }
        cout << endl;
        cout << "\n";
    }
}
